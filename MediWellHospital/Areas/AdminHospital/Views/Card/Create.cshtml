@model CardCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-description">
                Kart Əlavə Et
            </h1>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <form class="forms-sample" method="post" enctype="multipart/form-data" accept="image/*">
                <div class="form-group">
                    <div class="form-line">
                        <input asp-for="Icon" class="form-control" placeholder="Ikon">
                        <span class="text-danger" asp-validation-for="Icon"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        <input asp-for="Title" class="form-control" placeholder="Başlıq">
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>
                </div>
                <div class="form-group d-flex">
                    @*<input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="İstifadəçi adı">*@

                    <input asp-for="Description" class="form-control form-control-lg" placeholder="Deskripsiya">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button asp-action="Create" type="submit" class="btn btn-primary mr-2">Əlavə Et</button>

                <a asp-action="Index" class="btn btn-light">İmtina</a>

            </form>
        </div>
    </div>
</div>

