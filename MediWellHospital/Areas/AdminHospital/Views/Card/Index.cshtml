@model List<CardGetVM>
@{
    ViewData["Title"] = "Index";
    int count = 1;

}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Həkimlər</h4>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-success">Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Ikon</th>
                            <th>Başlıq</th>
                            <th>Deskripsiya</th>
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var card in Model)
                        {
                        <tr>

                            <td>@count</td>
                            <td>@card.Icon</td>
                            <td>@card.Title</td>
                            <td>@card.Description</td>

                            <td>
                                <a class="btn btn-warning" asp-controller="Card" asp-action="Update" asp-route-id="@card.Id">Yenilə</a>

                                <form method="post" asp-action="Delete">
                                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@card.Id">Sil</button>
                                </form>

                            </td>

                        </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


