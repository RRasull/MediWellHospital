@model List<DoctorGetVM>

@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Həkimlər</h4>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-success">Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sıra</th>
                            <th>Şəkil</th>
                            <th>Ad</th>
                            <th>Soayd</th>
                            <th>Sahə</th>
                            <th>Təhsil</th>
                            <th>Addres</th>
                            <th>İş Saatları</th>
                            <th>Departament</th>
                            <th>E-Posta</th>
                            <th>Cinsiyyət</th>
                            <th>Maaş</th>
                            <th>Cinsiyyət</th>
                            <th>>Şərh</th>
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                        <tr>

                            <td>@count</td>
                            <td><img src="/assets/images/team/@doctor.Image" alt="Alternate Text" /></td>
                            <td>@doctor.Name</td>
                            <td>@doctor.Surname</td>
                            <td>@doctor.Splztion</td>
                            <td>@doctor.Education</td>
                            <td>@doctor.Address</td>
                            <td>@doctor.WorkingHours</td>
                            <td>@doctor.DepartamentId</td>
                            <td>@doctor.EmailAddress</td>
                            <td>@doctor.Gender</td>
                            <td>@doctor.Fees</td>
                            @if(doctor.Description == String.Empty)
                            {
                                <td>"Line Is Empty"</td>
                            }
                            else
                            {
                                <td>@doctor.Description</td>
                            }




                            <td>
                                <a class="btn btn-warning" asp-controller="Doctor" asp-action="Update" asp-route-id="@doctor.Id">Update</a>

                                <form method="post" asp-action="Doctor">
                                    <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@doctor.Id">Delete</button>
                                </form>

                            </td>

                        </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



