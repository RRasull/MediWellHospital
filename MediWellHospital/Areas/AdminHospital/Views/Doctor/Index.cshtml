@model List<DoctorGetVM>

@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Team Table</h4>
            <div class="table-responsive">
                <a asp-action="Create" class="btn btn-success">Create</a>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Number</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Splztion</th>
                            <th>Setting</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doctor in Model)
                        {
                            <tr>

                                <td>@count</td>
                                <td><img src="/assets/images/team/@doctor.Image" alt="Alternate Text" /></td>
                                <td>@doctor.Name</td>
                                <td>@doctor.Surname</td>
                                <td>@doctor.Splztion</td>


                                <td>
                                    <a class="btn btn-warning" asp-controller="Doctor" asp-action="Update" asp-route-id="@doctor.Id">Update</a>

                                    <form method="post" asp-action="Doctor">
                                        <button type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@doctor.Id">Delete</button>
                                    </form>

                                </td>

                            </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



