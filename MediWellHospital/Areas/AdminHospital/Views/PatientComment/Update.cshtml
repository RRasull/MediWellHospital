@model PatientCommentUpdateVM
@{
    ViewData["Title"] = "Update";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h1 class="card-description">
                Pasient Şərhi Yenilə
            </h1>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <form class="forms-sample" method="post" enctype="multipart/form-data" accept="image/*">
                <div class="form-group">
                    <div class="form-line">
                        <input asp-for="Photo" class="form-control" placeholder="Şəkil">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-line">
                        <input asp-for="Fullname" class="form-control" placeholder="Pasient Adı">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                    </div>
                </div>
                <div class="form-group d-flex">
                    @*<input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="İstifadəçi adı">*@

                    <input asp-for="Comment" class="form-control form-control-lg" placeholder="Şərhi">
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group d-flex">
                    @*<input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="İstifadəçi adı">*@

                    <input asp-for="Profession" class="form-control form-control-lg" placeholder="Vəzifəsi">
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>
                <button asp-controller="PatientComment" asp-action="Update" type="submit" class="btn btn-primary mr-2">Yenilə</button>

                <a asp-action="Index" class="btn btn-light">İmtina</a>

            </form>
        </div>
    </div>
</div>

