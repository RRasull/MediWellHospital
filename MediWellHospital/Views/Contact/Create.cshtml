@model ContactUsCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Management System</title>
    <link rel="stylesheet" href="./assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

    <link rel="stylesheet" href="./assets/owl-carousel/owl-carousel files/owl.carousel.min.css">
    <link rel="stylesheet" href="./assets/owl-carousel/owl-carousel files/owl.theme.default.min.css">
    <link href="~/assets/lib/jquery-ui-1.13.1.custom/jquery-ui.css" rel="stylesheet" />
</head>
<body>

    <!-- ======= Top Bar ======= -->
    <section id="topbar" class="d-flex align-items-center">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i class="fas fa-envelope d-flex align-items-center"><a href="#">@Model.Setting["hospitalEmail"]</a></i>
                <i class="fas fa-mobile d-flex align-items-center ms-4"><span>@Model.Setting["hospitalPhone"]</span></i>
            </div>
            <div class="social-links d-none d-md-flex align-items-center">
                <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" class="facebook"><i class="fab fa-facebook"></i></a>
                <a href="#" class="instagram"><i class="fab fa-instagram"></i></a>
                <a href="#" class="youtube"><i class="fab fa-youtube"></i></i></a>
            </div>
        </div>
    </section>
    <!-- ======= Top Bar ======= -->
    <!-- ======= Main Section Start ======= -->
    <main id="Contact" class="contact">
        <div class="container my-5">

            <div>
                <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
            </div>

            <div class="container">
                <div class="row mt-5">

                    <div class="col-lg-4">
                        <div class="info">
                            <div class="address">
                                <i class="fa-solid fa-location-dot"></i>
                                <h4>Lokasiya:</h4>
                                <p>@Model.Setting["hospitalAdress1"]</p>
                            </div>

                            <div class="email">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                                <h4>E-Poçta:</h4>
                                <p>@Model.Setting["hospitalEmail"]</p>
                            </div>

                            <div class="phone">
                                <i class="fa fa-mobile" aria-hidden="true"></i>
                                <h4>Telefon:</h4>
                                <p>@Model.Setting["hospitalPhone"]</p>
                            </div>

                        </div>

                    </div>

                    <div class="col-lg-8 mt-5 mt-lg-0">

                        <form method="post">
                            <div class="row">
                                <div class="col-md-12 form-group mt-3 mt-md-0">
                                    <div class="form-group">
                                        @*<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Elektron ünvanınız">*@

                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Elektron ünvanınız">
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <div class="form-group">
                                    @*<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Elektron ünvanınız">*@

                                    <input asp-for="Subject" class="form-control form-control-lg" placeholder="Mövzu">
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <div class="form-group">
                                    @*<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Elektron ünvanınız">*@
                                    <textarea asp-for="Message" class="form-control form-control-lg" placeholder="Mesaj" required></textarea>
                                    @*<input asp-for="ContactUsVM.Subject" class="form-control form-control-lg" placeholder="Mövzu">*@
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="text-center"><button type="submit">Mesajı Göndər</button></div>
                        </form>

                    </div>

                </div>

            </div>

        </div>
    </main>
    <!-- ======= Main Section End ======= -->
    <!-- ======= Footer ======= -->
    <footer id="Footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">

                    <div class="col-lg-3 col-md-6">
                        <div class="footer-info">
                            <h3>MediWell</h3>
                            <p>
                                @Model.Setting["hospitalAdress1"] <br>
                                @Model.Setting["hospitalAdress2"]<br><br>
                                <strong>Phone:</strong> @Model.Setting["hospitalPhone"]<br>
                                <strong>Email:</strong> @Model.Setting["hospitalEmail"]<br>
                            </p>
                            <div class="social-links mt-3 d-none d-md-flex align-items-center">
                                <a href="#" class="twitter"><i class="fab fa-twitter"></i></a>
                                <a href="#" class="facebook"><i class="fab fa-facebook"></i></a>
                                <a href="#" class="instagram"><i class="fab fa-instagram"></i></a>
                                <a href="#" class="youtube"><i class="fab fa-youtube"></i></i></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-9 col-md-6">
                        <!-- insert map -->
                        <!-- using a responsive iframe -->
                        <div class="responsive-map-container">
                            <!-- place the iframe code between here... -->
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1737.6221882978507!2d-98.48650795000005!3d29.421653200000023!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x865c58aa57e6a56f%3A0xf08a9ad66f03e879!2sHenry+B.+Gonzalez+Convention+Center!5e0!3m2!1sen!2sus!4v1393884854786" width="640" height="480" frameborder="0" style="border:0"></iframe>
                            <!-- ... and here -->
                        </div>
                        <!-- /insert map -->
                    </div>


                </div>
            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>MediWell</span></strong>. Bütün hüquqlar qorunur
            </div>
        </div>
    </footer>
    <!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center">
        <i class="fas fa-arrow-up"></i>
    </a>



    <script src="./assets/js/script.js" defer></script>
    <script src="https://kit.fontawesome.com/a15dfedb3b.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-fQybjgWLrvvRgtW6bFlB7jaZrFsaBXjsOMm/tB9LTS58ONXgqbR9W8oWht/amnpF" crossorigin="anonymous"></script>


    <script src="./assets/owl-carousel/owl-carousel files/owl.carousel.min.js"></script>
    <script src="./assets/owl-carousel/main.js"></script>

    <script src="~/assets/lib/jquery-ui-1.13.1.custom/jquery-ui.min.js"></script>
</body>
</html>
