    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="bg-contact100" style="background-image: url('images/bg-01.jpg');">
        <div class="container-contact100">
            <div class="wrap-contact100">
                <div class="contact100-pic js-tilt" data-tilt>
                    <img src="~/assets/contactUs/images/img-01.png" alt="IMG">
                </div>

                <form class="contact100-form validate-form" method="post">
                    <span class="contact100-form-title">
                        Əlaqə Saxla
                    </span>



                    @*<div class="form-group">
            <div class="wrap-input100 validate-input">
                <input asp-for="Email" class="form-control form-control-lg input100" placeholder="Elektron ünvanınız">
                <span asp-validation-for="Email" class="text-danger focus-input100"></span>
                <span class="symbol-input100">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
        </div>*@


                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <input asp-for="Email" class="form-control form-control-lg input100" placeholder="Elektron ünvanınız">
                            <span asp-validation-for="Email" class="text-danger focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="wrap-input100 validate-input">
                            <input asp-for="Subject" class="form-control form-control-lg input100" placeholder="Mövzu">
                            <span asp-validation-for="Subject" class="text-danger focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Message is required">
                        <div class="form-group">
                            <textarea asp-for="Message" class="form-control form-control-lg input100" placeholder="Mesaj" required></textarea>
                            <span asp-validation-for="Message" class="text-danger focus-input100"></span>
                            <span class="focus-input100"></span>
                        </div>

                    </div>

                    <div class="container-contact100-form-btn">
                        <button class="contact100-form-btn">
                            Göndər
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/assets/contactUs/vendor/jquery/jquery-3.2.1.min.js"></script>
