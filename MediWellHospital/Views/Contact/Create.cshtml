@model ContactUsCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Contact V12</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/assets/contactUs/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/assets/contactUs/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="bg-contact100" style="background-image: url('images/bg-01.jpg');">
        <div class="container-contact100">
            <div class="wrap-contact100">
                <div class="contact100-pic js-tilt" data-tilt>
                    <img src="~/assets/contactUs/images/img-01.png" alt="IMG">
                </div>

                <form class="contact100-form validate-form" method="post">
                    <span class="contact100-form-title">
                        Əlaqə Saxla
                    </span>


                    <div class="form-group">
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
                            <input asp-for="Email" class="form-control form-control-lg input100" placeholder="Elektron ünvanınız">
                            <span asp-validation-for="Email" class="text-danger focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="wrap-input100 validate-input">
                            <input asp-for="Name" class="form-control form-control-lg input100" placeholder="Adınız">
                            <span asp-validation-for="Name" class="text-danger focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="wrap-input100 validate-input">
                            <input asp-for="Subject" class="form-control form-control-lg input100" placeholder="Mövzu">
                            <span asp-validation-for="Subject" class="text-danger focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>


                    <div class="wrap-input100 validate-input" data-validate="Message is required">
                        <div class="form-group">
                            <textarea asp-for="Message" class="form-control form-control-lg input100" placeholder="Mesaj" required></textarea>
                            <span asp-validation-for="Message" class="text-danger focus-input100"></span>
                            <span class="focus-input100"></span>
                        </div>

                    </div>

                    <div class="container-contact100-form-btn">
                        <button class="contact100-form-btn">
                            Göndər
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/assets/contactUs/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/contactUs/vendor/bootstrap/js/popper.js"></script>
    <script src="~/assets/contactUs/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/contactUs/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/assets/contactUs/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/assets/contactUs/js/main.js"></script>

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
    </script>

</body>
</html>